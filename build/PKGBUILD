pkgname=wndrecd
pkgver=1.0.0
pkgrel=1
epoch=
pkgdesc="record kde top window"
arch=('x86_64')
url="https://github.com/KEKE046/wndrecd"
license=('MIT')
groups=("ammonite-scala")
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git://github.com/KEKE046/wndrecd")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
    echo "1.0.0"
}

prepare() {
    cd $srcdir/$pkgname
    git submodule update --init
}

build() {
    cd $srcdir/$pkgname
    cmake -B build -S "wndrecd" -DCMAKE_INSTALL_PREFIX='/usr'
    cmake --build build
}

package() {
    cd $srcdir/$pkgname
    install -d kwin $pkgdir/usr/share/kwin/scripts/wndrecd
    kpackagetool5 --type=KWin/Script -i kwin --global
    DESTDIR="$pkgdir" cmake --install build
}
