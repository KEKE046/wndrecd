pkgname=wndrecd-git
pkgver=v1.1.0.r1.g580b7d7
pkgrel=1
epoch=
pkgdesc="record kde top window"
arch=('x86_64')
url="https://github.com/KEKE046/wndrecd"
license=('Apache2.0')
groups=()
depends=()
makedepends=('cmake' 'git')
checkdepends=()
optdepends=('python-matplotlib' 'python-pandas')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git://github.com/KEKE046/wndrecd")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
    cd "$srcdir/wndrecd"
    git submodule update --init
    cd simppl
    git apply "$srcdir/wndrecd/simppl.patch"
}

build() {
    cd "$srcdir/wndrecd"
    cmake -B build -S . -Wno-dev -DCMAKE_INSTALL_PREFIX='/usr' -DCMAKE_BUILD_TYPE='Release'
    cmake --build build
}

package() {
    cd "$srcdir/wndrecd"
    DESTDIR="$pkgdir" cmake --install build
    install -d "$pkgdir/usr/lib/systemd/user"
    install -d "$pkgdir/usr/bin"
    install wndrecd@.service "$pkgdir/usr/lib/systemd/user/wndrecd@.service"
    install wndrec "$pkgdir/usr/bin/wndrec"
}
