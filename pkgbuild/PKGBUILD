pkgname=wndrecd
pkgver=1.0.0
pkgrel=1
epoch=
pkgdesc="record kde top window"
arch=('x86_64')
url="https://github.com/KEKE046/wndrecd"
license=('Apache2.0')
groups=()
depends=()
makedepends=('cmake' 'git')
checkdepends=()
optdepends=('python-matplotlib' 'python-pandas')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git://github.com/KEKE046/wndrecd")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
    echo $pkgver
}

prepare() {
    cd $srcdir/$pkgname
    git submodule update --init
    cd simppl
    git apply $srcdir/$pkgname/simppl.patch
}

build() {
    cd $srcdir/$pkgname
    cmake -B build -S . -Wno-dev -DCMAKE_INSTALL_PREFIX='/usr' -DCMAKE_BUILD_TYPE='Release'
    cmake --build build
}

package() {
    cd $srcdir/$pkgname
    DESTDIR="$pkgdir" cmake --install build
    install -d $pkgdir/usr/lib/systemd/user
    install -d $pkgdir/usr/bin
    install wndrecd@.service $pkgdir/usr/lib/systemd/user/wndrecd@.service
    install wndrec $pkgdir/usr/bin/wndrec
}
